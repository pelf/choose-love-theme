{%- assign collection = collections[section.settings.collection] -%}

<div class="homepage-product-grid-stage stage-future">
  <div class="one-whole row-8">
    <div class="one-half row-12">
      <div class="one-whole row-5">
        <!-- adult education kit -->
        {%- assign product = collection.products[0] -%}
        {%- assign current_variant = product.selected_or_first_available_variant -%}
        <a href="{{ shop.url }}{{ product.url }}" class="homepage-product" data-section-type="product" itemscope itemtype="http://schema.org/Product">
          <meta itemprop="name" content="{{ product.title }}">
          <meta itemprop="url" content="{{ shop.url }}{{ product.url }}">
          <meta itemprop="image" content="{{ product.featured_image | img_url: '800x' }}">
          <meta itemprop="description" content="{{ product.description | strip_html | escape }}">

          <img src="{{ product.featured_image | img_url: '800x' }}" />

          <span class="product-name">{{ product.title }} ({{ current_variant.price | money }})</span>
        </a>
      </div>
      <div class="one-whole row-7">
        <div class="one-quarter row-12">
          <div class="one-whole row-5">
          </div>
          <div class="one-whole row-7">
            <!-- phone -->
