<div class="inner-page grid">
  <div class="medium-up--one-twelfth grid__item" style="height:1px;"></div>
  <div class="medium-up--seven-twelfths one-whole grid__item">
    <div class="inner-page-content">
      <h2 class="page-title">{{ page.title }}</h2>
      <div class="rte grid">
        <div class="one-third grid__item" style="margin: 1em 0">
          <img src="{{ "hr-color.png"| asset_url }}" style="width: 75%; display: block; margin: 0 auto"/>
