{% comment %}
  The share buttons share the home page URL. The share text is grabbed from the store
  meta description.
{% endcomment %}

{% layout 'password' %}

<p class="tagline">{{ 'general.tagline' | t }}</p>
<h4>{{ 'general.password_page.opening_soon' | t }}</h4>

{% unless shop.password_message == blank %}
  <p>
    {{ shop.password_message }}
  </p>
{% endunless %}
<div class="opening-soon-form">
  <div class="opening-soon-form-content">
    {% form 'customer' %}

      {{ form.errors | default_errors }}

      {% if form.posted_successfully? %}
        <ul class="form-success">
          <li>{{ 'general.password_page.signup_form_success' | t }}</li>
        </ul>
      {% else %}
        <input type="hidden" name="contact[tags]" value="prospect, password page">
        <input type="email"
          name="contact[email]"
          id="Email"
          spellcheck="false"
          required
          autocomplete="off"
          autocapitalize="off"
          placeholder="{{ 'general.password_page.signup_form_email_placeholder' | t }}">
        <button type="submit" name="commit" class="btn signup-btn">
          {{ 'general.password_page.signup_form_submit' | t }}
        </button>
      {% endif %}
    {% endform %}
  </div>
</div>

{% comment %}
{% if settings.share_facebook or settings.share_twitter %}
  <p>{{ 'general.password_page.spread_the_word' | t }}</p>
  {% include 'social-sharing' %}
{% endif %}

<a href="#Login">
  {% include 'icon-lock' %}
  {{ 'general.password_page.password_link' | t }} &rarr;
</a>
{% endcomment %}
